############################################################
# ğŸ“Œ Obtener todas las marcas
############################################################
GET {{baseUrl}}/brands/
Accept: application/json


############################################################
# ğŸ“Œ Crear una marca
############################################################

### âŒ Intento sin header X-Client-Id (esperado: 403 Forbidden)
POST {{baseUrl}}/brands/
Content-Type: application/json
Accept: application/json

{
  "name": "Nike",
  "owner": "Juan Perez",
  "is_active": true
}

### âœ… Con header X-Client-Id correcto (esperado: 201 Created)
POST {{baseUrl}}/brands/
Content-Type: application/json
Accept: application/json
X-Client-Id: 42

{
  "name": "Nike",
  "owner": "Juan Perez",
  "is_active": true
}


############################################################
# ğŸ“Œ Obtener una marca por ID
############################################################
GET {{baseUrl}}/brands/{{id}}/
Accept: application/json


############################################################
# ğŸ“Œ Actualizar completamente (PUT)
############################################################

### âŒ Sin header (esperado: 403 Forbidden)
PUT {{baseUrl}}/brands/{{id}}/
Content-Type: application/json
Accept: application/json

{
  "name": "Nike Actualizado",
  "owner": "Juan Perez",
  "is_active": true
}

### âœ… Con header correcto (esperado: 200 OK)
PUT {{baseUrl}}/brands/{{id}}/
Content-Type: application/json
Accept: application/json
X-Client-Id: 42

{
  "name": "Nike Actualizado",
  "owner": "Juan Perez",
  "is_active": true
}


############################################################
# ğŸ“Œ Actualizar parcialmente (PATCH)
############################################################

### âŒ Sin header (esperado: 403 Forbidden)
PATCH {{baseUrl}}/brands/{{id}}/
Content-Type: application/json
Accept: application/json

{
  "owner": "Maria Lopez"
}

### âœ… Con header correcto (esperado: 200 OK)
PATCH {{baseUrl}}/brands/{{id}}/
Content-Type: application/json
Accept: application/json
X-Client-Id: 42

{
  "owner": "Maria Lopez"
}


############################################################
# ğŸ“Œ Eliminar una marca (DELETE)
############################################################

### âŒ Sin header (esperado: 403 Forbidden)
DELETE {{baseUrl}}/brands/{{id}}/
Accept: application/json

### âœ… Con header correcto (esperado: 204 No Content)
DELETE {{baseUrl}}/brands/{{id}}/
Accept: application/json
X-Client-Id: 42


############################################################
# ğŸ“Œ Activar o desactivar (toggle-active)
############################################################

### âŒ Sin header (esperado: 403 Forbidden)
POST {{baseUrl}}/brands/{{id}}/toggle-active/
Accept: application/json

### âœ… Con header correcto (esperado: 200 OK)
POST {{baseUrl}}/brands/{{id}}/toggle-active/
Accept: application/json
X-Client-Id: 42